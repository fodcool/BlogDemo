<div style="width: 60%;
  height: 800px;
  margin: 0 auto;
  background-color: rgba(255, 255, 255, 0.73);
  text-align: center;
  padding-top: 35px;
  margin-top: -30px;
  overflow: auto;">

  <h2 style="margin-bottom: 20px; color: #20537f;"> <%= Article.title params[:category_id] %> </h2>

  <!--
  <%= form_tag(articles_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "模糊匹配" %>
    <%= submit_tag "Search" %>
  <% end %>
  -->

  <div style="font-size: 18px;">
    <table style="width: 100%; text-align: center;" class="table table-bordered table-hover">
      <tr>
        <td>时间</td>
        <td>标题</td>
      <% if current_user.present? %>
        <td colspan=2 >操作</td>
      <% end %>
      </tr>
      <% @articles.each do |article| %>
      </tr>
        <td><%= article.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td style="text-align: left; margin-left: 10px;">
				<%= link_to article.title, article %>
				<%= "("+ "#{article.visited_count}"+")" %>
				</td>
        <% if current_user.present? %>
          <td><%= link_to "编辑", edit_article_path(article)%></td>
          <td><%= link_to "删除", article, :method => :delete %></td>
        <% end %>
      </tr>
      <% end %>
    </table>

    <%= paginate @articles %><br/>

    <% if current_user.present? %>
      <td><%= link_to "创建博客", new_article_path %></td>
    <% end %>
  </div>
</div>
