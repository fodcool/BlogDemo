
<%= form_for @article do |f| %>
  <%= f.label :title, "标题:" %>
  <br/>
  <%= f.text_field :title, size: 40, placeholder: "请输入标题" %>
  <br/>
  <%= f.label :content, "内容:" %>
  <br/>
  <%= f.text_area :content, size: "40x12", placeholder: "请输入正文内容" %>
  <br/>
  <%= f.label :category_id, "分类" %>
  <%#= f.select :category_id, options_for_select([["生活", 1],["技术", 2]],2) %>
  <%= f.select :category_id, options_for_select(Article.categories, 2) %>
  <br/>
  <%= f.submit "提交" %>
<% end %>
